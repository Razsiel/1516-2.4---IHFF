@using IHFF.Models
@using IHFF.Helpers
@model Restaurant
@{
    ViewBag.Title = "RestaurantInfo";
}

<h2>@Model.Name</h2>
    
   <img src="~/Resources/Placeholder.png" class="justify-height" />
    
<div class="row row-inverse">
    <br />
</div>

<div class="container">
    <h4 class="container">
        @Model.Name
    </h4>
    
    <p class="col-sm-7">
        @MvcHtmlString.Create(Model.RestaurantInfo.Replace(Environment.NewLine, "<br />"))
    </p>
    <div class="col-sm-3  ">
        <a href="@Url.Action("Index", "Movies")">
            <img src="~/Resources/Placeholder.png" class="pull-left" />
        </a>
 
    </div>
</div>

<div class="row row-inverse">
    <br />
</div>


<div class="container">
    <h4 class="container">
        OpeningsTijden
    </h4>

    <p class="col-sm-5">
        Maandag        Gesloten <br />
        Dinsdag        11.00 - 22.00 <br />
        Woensdag       11.00 - 22.00 <br />
        Donderdag      11.00 - 22.00 <br />
        Vrijdag        10.00 - 22.00 <br />
        Zaterdag       11.00 - 22.00 <br />
        Zondag         11.00 - 22.00 <br />
</div>


<div class="row row-inverse">
        <br />
</div>

<div class="container">
            <h4 class="container">
                Contact 
            </h4>

            <p class="col-sm-5">
                 Adres Warmoestraat 5-7 <br />
                    Postcode 2011 HN Haarlem <br />
                    Tel. nr. +31 (0) 23 551 1564 <br />
                    E-mail info@restaurantdijkers.nl <br />
                <br />
                    Telefonisch bereikbaar op; <br />
                     Werkdagen: 9:15 - 17:00 <br />
                     Vrijdag: 9:15 - 15:00 <br />
                <br />
                    Email's zullen binnen 24 uur behandeld <br />
                    worden en zullen binnen 12-36 uur beantwoord <br />
                    worden door een van onze medewerkers <br />
            </p>

        <div class="col-sm-5 pull-right overlayable ">
            <img src="~/Resources/Placeholder.png" class="pull-left" />

            <div class="overlay-overlayable" style="bottom: 250px">
               <h4 class="container"> Maak een Reservering </h4>
            </div>

            <div class="overlay-overlayable" style="bottom: 140px">
                    Datum : 

                    <select class="c-select ">
                        <option selected>Woendsdag</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    
            </div>
            <div class="overlay-overlayable" style="bottom: 110px">
                Tijdstip :  
                <select class="c-select pull-right">
                    <option selected>19:30</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                
            </div>
            <div class="overlay-overlayable" style="bottom: 80px"  >
                Personen : 
                <select class="c-select pull-right">
                    <option selected>2 personen</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                
            </div>
            <div class="overlay-overlayable" style="bottom: 25px">
                @Html.ActionLink("Toevoegen", "RestaurantInfo", "Restaurant", new { }, new { @class = "btn btn-primary btn-block" })
            </div>
        </div>
    </div>

 <div class="container">
        <p class="col-sm-5, text-right">
            @MvcHtmlString.Create(Model.reserveringInfo.Replace(Environment.NewLine, "<br />"))
        </p>
</div>



    <div class="row row-inverse">
        <br />
    </div>
