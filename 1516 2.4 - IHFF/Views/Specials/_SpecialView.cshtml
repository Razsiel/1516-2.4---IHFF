@using IHFF.Models
@using IHFF.Helpers
@model IEnumerable<Special>

@foreach (Special item in Model)
{
    using (Html.BeginForm())
    {
        <div class="row movieRow justify-height-container">
            <div class="col-md-3">
                <div class="imgWrap">
                    <p class="imgDescription fancybox" href="@Url.Action("MovieInfo", new { id = item.EventId })">
                        Meer info
                    </p>
                    IMAGE!
                </div>
            </div>

            <div class="col-md-7 justify-height">
                <h3 class="movieTitle">
                    @Html.ActionLink(@item.Name, "MovieInfo", new { id = item.EventId }, new { @class = "fancybox movieTitle" })
                </h3>

                <p>
                    @item.ExtraInfo @Html.ActionLink("[Lees meer...]", "MovieInfo", new { id = item.EventId }, new { @class = "fancybox" })
                </p>

                <p>
                    <b>
                        Tijd: @item.Duration<br />
                    </b>
                </p>

                <div class="row moviePullDown">
                    <div class="col-md-12">
                        <b>Prijs: &euro; bedrag per ticket</b>
                    </div>
                    <br />
                    <div class="col-md-7">
                        Lijstje
                    </div>
                    <div class="col-md-3">
                        <select name="ticketAmount" class="movieDropDown">
                            @for (int i = 1; i <= 10; i++)
                            {
                                if (i == 1)
                                {
                                    <option value="@i">@i ticket</option>
                                }
                                else
                                {
                                    <option value="@i">@i tickets</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 pull-right">
                        <!--<a class="btn btn-primary btn-block movieBtn" href="#">Toevoegen</a>-->
                        <input type="submit" class="btn btn-primary btn-block movieBtn" value="Toevoegen" />
                    </div>
                </div>
            </div>
        </div>
    }
}
<script>
    $(document).ready(function () {

        $(".fancybox").click(function () {
            $.fancybox.open({
                content: $('<div>').load($(this).attr('href')),
                type: 'ajax',
                maxWidth: 800,
                fitToView: false,
                autoSize: true,
                openEffect: 'fade',
                closeEffect: 'fade'
            });
            return false;
        })
    });
</script>

