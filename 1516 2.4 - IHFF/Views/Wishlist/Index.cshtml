@model IHFF.Models.Wishlist

@{
    ViewBag.Title = "Wishlist";
}

<div class="container">
    <ol class="breadcrumb">
        <li><a href="/Home">Home</a></li>
        <li class="active">My wishlist</li>
    </ol>

    <div class="row justify-height-container">
        <div class="col-xs-6 col-md-3">
            <h2>@ViewBag.Title</h2>
            <a href="javascript:history.back()" class="btn btn-primary pull-down-absolute">Terug naar vorige pagina</a>
        </div>
        <div class="col-xs-2 col-md-3 col-md-offset-1">
            <img src="~/Resources/special tickets.png" class="img-responsive" />
        </div>
        <div class="col-xs-4 col-md-4 col-md-offset-1">
            <h3>Share your wishlist</h3>
            <h6>Tell your friends what you're up to!</h6>
            <div class="row sm-icons">
                <div class="col-xs-3">
                    <img src="~/Resources/Placeholder.png" class="img-responsive" />
                </div>
                <div class="col-xs-3">
                    <img src="~/Resources/Placeholder.png" class="img-responsive" />
                </div>
                <div class="col-xs-3">
                    <img src="~/Resources/Placeholder.png" class="img-responsive" />
                </div>
                <div class="col-xs-3">
                    <img src="~/Resources/Placeholder.png" class="img-responsive" />
                </div>
            </div>
        </div>
    </div>
</div>
<br />
@if (Model == null)
{
    @Html.Partial("_WishlistEmpty", Model)
}
else
{
    @Html.Partial("_WishlistPopulated", Model)
}
@Html.Partial("_Cart")

